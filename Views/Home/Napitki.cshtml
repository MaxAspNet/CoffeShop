@model List<Aprel.Models.Item>

@{
    ViewBag.Title = "Кофе в капсулах для кофемашины NESCAFE® Dolce Gusto®";
}

<body onload="getAjaxHtml5();">
    <div class="breadcrumbs"><a href="@Url.Action("Index", "Home")">Home</a>        >      ВКУСЫ</div>
    <div style="padding-top: 24px;">
        <div class="chooser">
            <dl>

                <dt class="filter-name">Цена</dt>
                <dd class="option">
                    <div id='options'>
                        <form method='post'>
                            От:
                            <input type="text" name="price" id="price" maxlength="10">
                            До:
                            <input type="text" name="price" id="price2" maxlength="10">
                            руб.
                        </form>
                    </div>
                    <div id="slider_price"></div>
                </dd>

                <dt class="filter-name">Вид напитка</dt>
                <dd class="option">
                    <ol>
                        <li><input id="itemFilter1" type="checkbox" onclick="getAjaxHtml5()" /><label for="itemFilter1">Кофе </label></li>
                        <li><input id="itemFilter2" type="checkbox" onclick="getAjaxHtml5()" /><label for="itemFilter2">Кофе с молоком</label></li>
                        <li><input id="itemFilter3" type="checkbox" onclick="getAjaxHtml5()" /><label for="itemFilter3">Горячий шоколад</label></li>
                    </ol>
                </dd>
            </dl>

        </div>
        <div>
            <section class="CoffeemachinesOutside">
                <div id="block" class="banner custom">


                    <ul id="lightslider">
                        <li><img src="~/Images/Akcii/Action1.jpg" /></li>
                        <li><img src="~/Images/Akcii/Action2.jpg" /> </li>
                        <li><img src="~/Images/Akcii/Action3.jpg" /> </li>
                        <li><img src="~/Images/Akcii/Action4.jpg" /></li>
                    </ul>
                </div>


                <script>
                    $(window).load(function () {

                        $('#lightslider').lightSlider({
                            item: 1,
                            loop: true,
                            autoWidth: true,
                            auto: true,
                            pause: 3000,

                        });
                    });


                    function checkitem1() {
                        if (itemFilter1.checked || (!itemFilter1.checked && !itemFilter2.checked && !itemFilter3.checked)) {
                            return 'CoffeeBlack'
                        } else {
                            return 'Undefined'
                        }
                    }
                    function checkitem2() {
                        if (itemFilter2.checked || (!itemFilter2.checked && !itemFilter1.checked && !itemFilter3.checked)) {
                            return 'CoffeeMilk'
                        } else {
                            return 'Undefined'
                        }
                    }
                    function checkitem3() {
                        if (itemFilter3.checked || (!itemFilter3.checked && !itemFilter2.checked && !itemFilter1.checked)) {
                            return 'Chokolate'
                        } else {
                            return 'Undefined'
                        }
                    }
                </script>
                <script>
                    $(function () {
                        $('#price').change(function () {
                            var val = $(this).val();
                            $('#slider_price').slider("values", 0, val);
                            $(function (event, ui) { getAjaxHtml5() });

                        });
                        $('#price2').change(function () {
                            var val1 = $(this).val();
                            $('#slider_price').slider("values", 1, val1);
                            $(function (event, ui) { getAjaxHtml5() });
                        });


                        $("#slider_price").slider({
                            range: true,
                            min: 378,
                            max: 420,
                            values: [378, 420],
                            slide: function (event, ui) {
                                //Поле минимального значения
                                $("#price").val(ui.values[0]);
                                //Поле максимального значения
                                $("#price2").val(ui.values[1]);

                            },
                            stop: function (event, ui) { getAjaxHtml5() }
                        });
                        //Записываем значения ползунков в момент загрузки страницы
                        //То есть значения по умолчанию
                        $("#price").val($("#slider_price").slider("values", 0));
                        $("#price2").val($("#slider_price").slider("values", 1));
                    });
                </script>

            </section>

            <section class="Napitki">
                <header>
                    <h2>@ViewBag.Title</h2>
                </header>
                <div id="Items">

                </div>
            </section>

            <section class="Napitki">

                <div class="float-right">
                    <p class="float-right">
